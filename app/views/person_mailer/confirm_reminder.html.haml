- conversation_url = person_message_url(@url_params.merge({:person_id => @recipient.id, :id => @conversation.id.to_s}))
- confirm_url = confirm_person_message_url(@url_params.merge({:person_id => @recipient.id, :id => @conversation.id.to_s}))
- cancel_url = cancel_person_message_url(@url_params.merge({:person_id => @recipient.id, :id => @conversation.id.to_s}))

%tr
  %td{:align => "left"} 
    %font{body_font}
      = t("emails.confirm_reminder.you_have_not_yet_confirmed_or_canceled_request", :date => time_ago(@conversation.created_at.to_date), :request_link => link_to(@conversation.title, conversation_url, :style => body_link_style), :other_party_full_name => @conversation.offerer.name, :other_party_given_name => @conversation.offerer.given_name_or_username).html_safe

%tr
  %td{:align => "left", :style => "padding-top: 25px; padding-bottom: 25px;"}
    = render :partial => "green_action_button", :locals => { :text => t("conversations.status_link.confirm"), :url => confirm_url}

%tr
  %td{:align => "left", :style => "padding-bottom: 25px;"} 
    %font{body_font}
      = t("emails.confirm_reminder.if_will_not_happen_you_should_cancel", :cancel_it_link => link_to(t("emails.confirm_reminder.cancel_it_link_text"), cancel_url, :style => body_link_style)).html_safe




